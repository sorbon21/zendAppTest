{% extends 'layout/layout' %}
{% block content %}
    <a href="/user">Пользователи</a>
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Последние заказы юзеров</h1>
            <table class="table table-bordered table-dark">
                <tr>
                    <th>
                        Пользователь
                    </th>
                    <th>
                        Продукт
                    </th>
                    <th>Дата добавления</th>
                </tr>
                {% for item in lastProducts %}
                    <tr>
                        <td>(<a href="/user/{{ item.user.id}}/products">{{ item.user.id}}</a>) {{ item.user.name}}</td>
                        <td>({{ item.product.id}}) {{ item.product.name}}</td>
                        <td>{{ item.dtCreated.date }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12">
            <nav aria-label="Page navigation " class="pagination">
                <ul class="list-group">

                    {% for item in pages.pagesInRange %}
                        {% if pages.current == item %}

                            <li class="page-item active">
                              <span class="page-link">
                                {{ item }}
                                <span class="sr-only">(current)</span>
                              </span>
                            </li>
                        {% else %}
                            <li class="page-item"><a class="page-link" href="/latest-products/{{ item}}">{{ item }}</a></li>
                        {% endif %}


                    {% endfor %}

                </ul>
            </nav>

        </div>
    </div>

{% endblock %}
